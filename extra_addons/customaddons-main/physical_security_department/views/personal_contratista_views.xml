<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- 📋 Vista Lista (List) -->
    <record id="view_personal_contratista_list" model="ir.ui.view">
        <field name="name">personal.contratista.list</field>
        <field name="model">physical_security.personal_contratista</field>
        <field name="arch" type="xml">
            <list string="Personal Contratista">
                <field name="cedula"/>
                <field name="apellidos"/>
                <field name="nombres"/>
                <field name="cargo"/>
                <field name="create_uid" widget="many2one_avatar_user" string="Creado por" optional="show"/>
                <field name="create_date" string="Fecha de creación" optional="show"/>
            </list>
        </field>
    </record>

    <!-- 🧾 Vista Formulario (Form) -->
    <record id="view_personal_contratista_form" model="ir.ui.view">
        <field name="name">personal.contratista.form</field>
        <field name="model">physical_security.personal_contratista</field>
        <field name="arch" type="xml">
            <form string="Personal Contratista" version="18.0">
                <sheet>
                    <group>
                        <field name="cedula" required="1"/>
                        <field name="apellidos" required="1"/>
                        <field name="nombres" required="1"/>
                        <field name="cargo"/>
                        <field name="enlace_documento"/>
                    </group>
                </sheet>

                <!-- 💬 Chatter moderno (Odoo 18 usa esta etiqueta) -->
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ⚙️ Acción principal -->
    <record id="action_personal_contratista" model="ir.actions.act_window">
        <field name="name">Personal Contratista</field>
        <field name="res_model">physical_security.personal_contratista</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
    </record>

</odoo>
