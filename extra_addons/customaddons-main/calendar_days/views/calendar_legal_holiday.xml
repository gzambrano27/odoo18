<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- 🔍 Vista de búsqueda -->
        <record id="calendar_legal_holiday_view_search" model="ir.ui.view">
            <field name="name">calendar.legal.holiday.search</field>
            <field name="model">calendar.legal.holiday</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <search string="Días Legales Festivos">
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="holiday_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                    <group expand="0" string="Agrupar por...">
                        <filter name="group_by_holiday" string="Festivo" context="{'group_by': 'holiday_id'}"/>
                        <filter name="group_by_date_from" string="Fecha Inicio" context="{'group_by': 'date_from'}"/>
                        <filter name="group_by_date_to" string="Fecha Fin" context="{'group_by': 'date_to'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- 📋 Vista de lista -->
        <record id="calendar_legal_holiday_view_list" model="ir.ui.view">
            <field name="name">calendar.legal.holiday.list</field>
            <field name="model">calendar.legal.holiday</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <list string="Días Legales Festivos"
                      create="true"
                      edit="true"
                      delete="true">
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="holiday_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                </list>
            </field>
        </record>

        <!-- 🗓️ Vista de calendario -->
        <record id="calendar_legal_holiday_view_calendar" model="ir.ui.view">
            <field name="name">calendar.legal.holiday.calendar</field>
            <field name="model">calendar.legal.holiday</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <calendar string="Días Legales Festivos"
                          date_start="date_from"
                          date_stop="date_to"
                          color="holiday_id">
                    <field name="holiday_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </calendar>
            </field>
        </record>

        <!-- 📝 Vista de formulario -->
        <record id="calendar_legal_holiday_view_form" model="ir.ui.view">
            <field name="name">calendar.legal.holiday.form</field>
            <field name="model">calendar.legal.holiday</field>
            <field eval="8" name="priority"/>
            <field name="arch" type="xml">
                <form string="Días Legales Festivos"
                      version="18.0"
                      create="true"
                      edit="true"
                      delete="true">
                    <sheet>
                        <group colspan="4" col="2">
                            <group colspan="2">
                                <field name="date_from" colspan="2" required="1"/>
                                <field name="date_to" colspan="2" required="1"/>
                            </group>
                            <group colspan="2">
                                <field name="holiday_id"
                                       colspan="2"
                                       required="1"
                                       options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ⚙️ Acción principal -->
        <record id="calendar_legal_holiday_view_action" model="ir.actions.act_window">
            <field name="name">Días Legales Festivos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">calendar.legal.holiday</field>
            <field name="view_mode">list,form,calendar</field>
            <field name="context">{}</field>
            <field name="view_id" ref="calendar_legal_holiday_view_list"/>
            <field name="search_view_id" ref="calendar_legal_holiday_view_search"/>
        </record>

        <!-- 🔗 Asociación de vistas -->
        <record model="ir.actions.act_window.view" id="calendar_legal_holiday_view_list_action">
            <field name="sequence" eval="1"/>
            <field name="view_mode">list</field>
            <field name="view_id" ref="calendar_legal_holiday_view_list"/>
            <field name="act_window_id" ref="calendar_legal_holiday_view_action"/>
        </record>

        <record model="ir.actions.act_window.view" id="calendar_legal_holiday_view_form_action">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="calendar_legal_holiday_view_form"/>
            <field name="act_window_id" ref="calendar_legal_holiday_view_action"/>
        </record>

        <record model="ir.actions.act_window.view" id="calendar_legal_holiday_view_calendar_action">
            <field name="sequence" eval="3"/>
            <field name="view_mode">calendar</field>
            <field name="view_id" ref="calendar_legal_holiday_view_calendar"/>
            <field name="act_window_id" ref="calendar_legal_holiday_view_action"/>
        </record>

    </data>
</odoo>
