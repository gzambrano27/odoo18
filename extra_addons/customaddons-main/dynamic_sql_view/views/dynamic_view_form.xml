<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_dynamic_sql_form" model="ir.ui.view">
            <field name="name">dynamic.sql.view.form</field>
            <field name="model">dynamic.sql.view</field>
            <field name="arch" type="xml">
                <form string="Crear Vista SQL">
                    <header>
                        <button name="action_create_view"
                                type="object"
                                string="Crear/Actualizar Vista"
                                class="btn-primary"
                                icon="fa-database"/>
                        <button string="Cerrar" special="cancel" class="btn-secondary"/>
                    </header>
                    <sheet>
                        <group colspan="2">
                            <group>
                                <field name="name"/>
                                <field name="sql_query" widget="text"/>
                            </group>
                            <group>
                                <field name="state" readonly="1"/>
                                <field name="created_by" readonly="1"/>
                                <field name="created_at" readonly="1"/>
                                <field name="last_updated" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_dynamic_sql_list" model="ir.ui.view">
            <field name="name">dynamic.sql.view.list</field>
            <field name="model">dynamic.sql.view</field>
            <field name="arch" type="xml">
                <list string="Vistas SQL">
                    <field name="name"/>
                    <field name="state"/>
                    <field name="created_by"/>
                    <field name="created_at"/>
                    <field name="last_updated"/>
                </list>
            </field>
        </record>
        <record id="action_dynamic_sql_view" model="ir.actions.act_window">
            <field name="name">Vistas SQL</field>
            <field name="res_model">dynamic.sql.view</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_dynamic_sql_list"/>
        </record>
        <menuitem id="menu_dynamic_sql_root"
                  name="SQL DinÃ¡mico"
                  app="true"
                  groups="dynamic_sql_view.group_sql_analista"/>
        <menuitem id="menu_dynamic_sql_view"
                  name="Vistas SQL"
                  parent="menu_dynamic_sql_root"
                  action="action_dynamic_sql_view"
                  groups="dynamic_sql_view.group_sql_analista"
                  sequence="10"/>
    </data>
</odoo>
