<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- 🧾 Vista Formulario -->
    <record id="view_purchase_historical_gps_form" model="ir.ui.view">
        <field name="name">purchase.historical.gps.form</field>
        <field name="model">purchase.historical.gps</field>
        <field name="arch" type="xml">
            <form string="Historial de Compras GPS" version="18.0">
                <sheet>
                    <group col="4">
                        <!-- Campos principales del modelo de Compras -->
                        <field name="erp"/>
                        <field name="categoria"/>
                        <field name="referencia_interna"/>
                        <field name="proveedor"/>
                        <field name="categoria_2"/>
                        <field name="subcategoria"/>
                        <field name="marca"/>
                        <field name="descripcion"/>
                        <field name="tipo_transaccion"/>
                        <field name="tipo"/>
                        <field name="fecha"/>
                        <field name="nombre"/>
                        <field name="numero"/>
                        <field name="cantidad"/>
                        <field name="costo"/>
                        <field name="valor_1"/>
                        <field name="valor_2"/>
                        <field name="a_mano"/>
                        <field name="costo_promedio"/>
                        <field name="valor_activo"/>
                        <field name="costo_vta"/>
                        <field name="mes"/>
                        <field name="anio"/>
                    </group>
                </sheet>

                <!-- 💬 Chatter moderno -->
                <chatter/>
            </form>
        </field>
    </record>

    <!-- 🔍 Vista de Búsqueda -->
    <record id="view_purchase_historical_gps_search" model="ir.ui.view">
        <field name="name">purchase.historical.gps.search</field>
        <field name="model">purchase.historical.gps</field>
        <field name="arch" type="xml">
            <search string="Buscar en Historial de Compras GPS">
                <field name="erp"/>
                <field name="referencia_interna"/>
                <field name="nombre"/>
                <field name="descripcion"/>
                <field name="anio"/>
                <group expand="0" string="Agrupar por...">
                    <filter name="group_by_erp" string="ERP" context="{'group_by': 'erp'}"/>
                    <filter name="group_by_referencia_interna" string="Referencia Interna" context="{'group_by': 'referencia_interna'}"/>
                    <filter name="group_by_mes" string="Mes" context="{'group_by': 'mes'}"/>
                    <filter name="group_by_anio" string="Año" context="{'group_by': 'anio'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- 📋 Vista Lista -->
    <record id="view_purchase_historical_gps_list" model="ir.ui.view">
        <field name="name">purchase.historical.gps.list</field>
        <field name="model">purchase.historical.gps</field>
        <field name="arch" type="xml">
            <list string="Historial de Compras GPS">
                <field name="erp"/>
                <field name="referencia_interna"/>
                <field name="nombre"/>
                <field name="descripcion"/>
                <field name="costo"/>
                <field name="cantidad"/>
                <field name="mes"/>
                <field name="anio"/>
            </list>
        </field>
    </record>

    <!-- ⚙️ Acción Principal -->
    <record id="action_purchase_historical_gps" model="ir.actions.act_window">
        <field name="name">Historial de Compras GPS</field>
        <field name="res_model">purchase.historical.gps</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>🧾 Esta vista muestra el historial completo de compras de GPS, organizado por ERP, SKU y períodos.</p>
        </field>
    </record>

</odoo>
