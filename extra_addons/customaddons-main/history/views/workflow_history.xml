<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- 🔍 Vista de búsqueda -->
        <record id="workflow_history_view_filter" model="ir.ui.view">
            <field name="name">workflow.history.filter</field>
            <field name="model">workflow.history</field>
            <field name="arch" type="xml">
                <search string="Historial">
                    <group expand="0" string="Filtrar por..."/>
                    <group expand="0" string="Agrupar por...">
                        <filter name="grp_state" string="Estado" context="{'group_by': 'state'}"/>
                        <filter name="grp_create_uid" string="Usuario" context="{'group_by': 'create_uid'}"/>
                    </group>
                    <field name="create_uid" string="Usuario"/>
                </search>
            </field>
        </record>

        <!-- 📋 Vista lista -->
        <record id="workflow_history_view_tree" model="ir.ui.view">
            <field name="name">workflow.history.tree</field>
            <field name="model">workflow.history</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Historial" create="false" delete="false" edit="false"
                      decoration-muted="color_flag == 'muted'"
                      decoration-danger="color_flag == 'danger'"
                      decoration-success="color_flag == 'success'"
                      decoration-primary="color_flag == 'primary'"
                      decoration-info="color_flag == 'info'"
                      decoration-warning="color_flag == 'warning'"
                      decoration-bf="bold_flag == True"
                      decoration-it="it_flag == True">
                    <field name="create_uid" readonly="1" string="Usuario"
                           options="{'no_open': True, 'no_create': True}"/>
                    <field name="create_date" readonly="1" string="Fecha de Creación"/>
                    <field name="comments" readonly="1"/>
                    <field name="state" readonly="1"/>
                    <field name="bold_flag" invisible="1"/>
                    <field name="it_flag" invisible="1"/>
                    <field name="color_flag" invisible="1"/>
                </list>
            </field>
        </record>

        <!-- 🧾 Vista formulario -->
        <record id="workflow_history_view_form" model="ir.ui.view">
            <field name="name">workflow.history.form</field>
            <field name="model">workflow.history</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Historial" create="false" delete="false" edit="false">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="create_uid" readonly="1" string="Usuario"
                                       options="{'no_open': True, 'no_create': True}"/>
                                <field name="create_date" readonly="1" string="Fecha de Creación"/>
                            </group>
                            <group>
                                <field name="file_name" readonly="1"
                                       invisible="file == False"/>
                                <field name="file" filename="file_name" readonly="1"
                                       invisible="file_name == False"/>
                                <field name="comments" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
