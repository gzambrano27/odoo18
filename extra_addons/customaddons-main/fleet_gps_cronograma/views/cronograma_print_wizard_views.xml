<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- =============================
             ðŸ”¹ Vista del Wizard (Formulario)
        ============================== -->
        <record id="view_cronograma_print_wizard_form" model="ir.ui.view">
            <field name="name">cronograma.print.wizard.form</field>
            <field name="model">cronograma.print.wizard</field>
            <field name="arch" type="xml">
                <form string="Fechas a Imprimir">
                    <sheet>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Cancelar"
                                special="cancel"
                                class="btn btn-secondary"/>
                        <button string="Imprimir"
                                name="action_print"
                                type="object"
                                class="btn btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- =============================
             ðŸ”¹ AcciÃ³n que abre el wizard
        ============================== -->
        <record id="action_cronograma_print_wizard" model="ir.actions.act_window">
            <field name="name">Imprimir Cronograma</field>
            <field name="res_model">cronograma.print.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_cronograma_print_wizard_form"/>
            <field name="target">new</field>
        </record>
</odoo>
