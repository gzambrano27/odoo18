<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <!-- 1) Solo propios para usuarios -->
  <record id="rule_cronograma_user_own" model="ir.rule">
    <field name="name">Cronograma: sólo propios</field>
    <field name="model_id" ref="fleet_gps_cronograma.model_fleet_cronograma"/>
    <!-- fuerza el filtro create_uid == usuario actual -->
    <field name="domain_force">[('create_uid','=',user.id)]</field>
    <field name="groups" eval="[(4, ref('fleet_gps_cronograma.group_cronograma_usuario'))]"/>
  </record>

  <!-- 2) Todos los registros para administradores -->
  <record id="rule_cronograma_admin_all" model="ir.rule">
    <field name="name">Cronograma: todos (admin)</field>
    <field name="model_id" ref="fleet_gps_cronograma.model_fleet_cronograma"/>
    <!-- dominio vacío equivale a “1 = 1” -->
    <field name="domain_force">[(1,'=',1)]</field>
    <field name="groups" eval="[(4, ref('fleet_gps_cronograma.group_cronograma_admin'))]"/>
  </record>

</odoo>
