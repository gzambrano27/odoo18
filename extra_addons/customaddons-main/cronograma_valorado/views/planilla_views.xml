<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- 📋 Vista de Lista -->
    <record id="view_planillas_planilla_list" model="ir.ui.view">
        <field name="name">cronograma.planilla.list</field>
        <field name="model">cronograma.planilla</field>
        <field name="arch" type="xml">
            <list string="Planillas" default_order="create_date desc">
                <field name="name" widget="badge" decoration-muted="True"/>
                <field name="usuario_id" widget="many2one_avatar_user" string="Usuario" readonly="1"/>
                <field name="cuenta_analitica_id" widget="badge" decoration-info="True"/>
                <field name="company_id" invisible="1"/>
                <field name="currency_id" invisible="1"/>
                <field name="total_subtotal" optional="show"
                       groups="cronograma_valorado.group_planillas_admin,cronograma_valorado.group_planillas_reader"/>
                <field name="total_subtotal_planilla" optional="show"
                       groups="cronograma_valorado.group_planillas_admin,cronograma_valorado.group_planillas_reader"/>
                <field name="create_uid" widget="many2one_avatar_user" string="Creado por" optional="show"/>
                <field name="create_date" string="Fecha de creación" optional="show"/>
                <field name="state" string="Estado" widget="badge"
                       decoration-muted="state == 'draft'"
                       decoration-info="state == 'to_approve'"
                       decoration-success="state == 'approved'"
                       decoration-danger="state == 'cancel'"/>
            </list>
        </field>
    </record>

    <!-- 🧾 Vista de Formulario -->
    <record id="view_planillas_planilla_form" model="ir.ui.view">
        <field name="name">cronograma.planilla.form</field>
        <field name="model">cronograma.planilla</field>
        <field name="arch" type="xml">
            <form string="Planilla" version="18.0">
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,to_approve,approved,cancel"/>

                    <button name="action_to_approve" type="object" string="Por Aprobar"
                            invisible="state != 'draft'"
                            class="btn-primary"
                            groups="cronograma_valorado.group_planillas_admin,cronograma_valorado.group_planillas_user"/>

                    <button name="action_approve" type="object" string="Aprobar"
                            invisible="state != 'to_approve'"
                            class="btn-primary"
                            groups="cronograma_valorado.group_planillas_admin"/>

                    <button name="action_cancel" type="object" string="Cancelar"
                            invisible="not state in ['draft','to_approve']"
                            class="btn-primary"
                            groups="cronograma_valorado.group_planillas_admin"/>

                    <button name="action_reset_to_draft" type="object" string="Reestablecer a Borrador"
                            invisible="not state in ['cancel','to_approve','approved']"
                            class="btn-secondary"
                            groups="cronograma_valorado.group_planillas_admin,cronograma_valorado.group_planillas_user"/>

                    <button name="export_to_excel" type="object" string="Exportar Excel"
                            class="btn-light"
                            groups="cronograma_valorado.group_planillas_admin"/>

                    <button name="export_to_excel_project" type="object" string="Exportar Excel Project"
                            class="btn-light"
                            groups="cronograma_valorado.group_planillas_admin"/>

                    <button name="generate_curva_s" type="object" string="Generar Curva S"
                            class="btn-primary"/>
                </header>

                <sheet>
                    <group col="12" class="mb-3">
                        <group colspan="6">
                            <field name="import_filename" invisible="1"/>
                            <field name="import_file" filename="import_filename"
                                   widget="binary"
                                   groups="cronograma_valorado.group_planillas_admin"/>
                        </group>
                        <group colspan="6">
                            <button name="import_from_excel" string="Importar"
                                    type="object" class="btn-primary"
                                    groups="cronograma_valorado.group_planillas_admin"/>
                            <button name="import_from_excel_project" string="Importar Project"
                                    type="object" class="btn-secondary"
                                    groups="cronograma_valorado.group_planillas_admin"/>
                        </group>
                    </group>

                    <group col="12">
                        <group colspan="6">
                            <field name="name"/>
                        </group>
                        <group colspan="6">
                            <field name="usuario_id" readonly="1"/>
                        </group>
                    </group>

                    <group col="12">
                        <group colspan="8">
                            <field name="cuenta_analitica_id"/>
                        </group>
                    </group>

                    <field name="company_id" invisible="1"/>
                    <field name="currency_id" invisible="1"/>

                    <!-- 🗂️ Notebook -->
                    <notebook>
                        <page string="Detalles">
                            <field name="notebook_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="rubro" required="1"/>
                                    <field name="descripcion"/>
                                    <field name="unidad_medida"/>
                                    <field name="precio_unitario"
                                           groups="cronograma_valorado.group_planillas_admin,cronograma_valorado.group_planillas_reader"/>
                                    <field name="cantidad"/>
                                    <field name="consumo" readonly="1"/>
                                    <field name="subtotal" readonly="1"/>
                                    <field name="subtotal_planilla" readonly="1"/>
                                    <field name="diferencia_cantidad" readonly="1"/>
                                    <field name="diferencia_subtotal" readonly="1"/>
                                </list>

                                <form string="Detalle de Planilla">
                                    <sheet>
                                        <group col="4">
                                            <field name="rubro" required="1"/>
                                            <field name="descripcion"/>
                                            <field name="unidad_medida"/>
                                            <field name="precio_unitario"
                                                   groups="cronograma_valorado.group_planillas_admin,cronograma_valorado.group_planillas_reader"/>
                                        </group>

                                        <group col="12">
                                            <group colspan="4">
                                                <field name="cantidad"/>
                                                <field name="subtotal" readonly="1"/>
                                            </group>
                                            <group colspan="4">
                                                <field name="consumo" readonly="1"/>
                                                <field name="subtotal_planilla" readonly="1"/>
                                            </group>
                                            <group colspan="4">
                                                <field name="diferencia_cantidad" readonly="1"/>
                                                <field name="diferencia_subtotal" readonly="1"/>
                                            </group>
                                        </group>

                                        <field name="observacion"/>

                                        <notebook>
                                            <page string="Avances">
                                                <field name="detalle_ids" nolabel="1">
                                                    <list editable="bottom">
                                                        <field name="fecha" required="1"/>
                                                        <field name="cantidad" required="1"/>
                                                        <field name="valor" required="1"
                                                               groups="cronograma_valorado.group_planillas_admin,cronograma_valorado.group_planillas_reader"/>
                                                        <field name="cantidad_avance_real" required="1"/>
                                                        <field name="valor_avance_real" required="1"
                                                               groups="cronograma_valorado.group_planillas_admin,cronograma_valorado.group_planillas_reader"/>
                                                    </list>
                                                </field>
                                            </page>
                                        </notebook>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>

                    <!-- Totales -->
                    <group col="12" class="oe_right mt-3"
                           groups="cronograma_valorado.group_planillas_admin,cronograma_valorado.group_planillas_reader">
                        <group string="Totales Valorados" colspan="4">
                            <field name="total_subtotal" class="text-right"/>
                        </group>
                        <group string="Totales Avance Real" colspan="4">
                            <field name="total_subtotal_planilla" class="text-right"/>
                        </group>
                        <group string="Totales Diferencias" colspan="4">
                            <field name="total_diferencia_subtotal" class="text-right"/>
                        </group>
                    </group>
                </sheet>

                <!-- 💬 Chatter -->
                <chatter/>
            </form>
        </field>
    </record>

    <!-- 🧱 Vista Kanban -->
    <record id="view_planillas_planilla_kanban" model="ir.ui.view">
        <field name="name">cronograma.planilla.kanban</field>
        <field name="model">cronograma.planilla</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard" default_order="create_date desc">
                <field name="name"/>
                <field name="cuenta_analitica_id"/>
                <field name="state"/>
                <field name="currency_id"/>
                <field name="total_subtotal"/>
                <field name="total_subtotal_planilla"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_card o_kanban_global_click">
                            <div class="text-center">
                                <strong t-esc="record.name.value" class="fs-5"/>
                            </div>
                            <div class="mt-2">
                                <strong>Analítica:</strong>
                                <field name="cuenta_analitica_id" widget="badge"/>
                            </div>
                            <div>
                                <strong>Total Valorado:</strong>
                                <field name="total_subtotal" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                            </div>
                            <div>
                                <strong>Total Avance Real:</strong>
                                <field name="total_subtotal_planilla" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                            </div>
                            <div class="mt-2">
                                <strong>Estado:</strong>
                                <field name="state" widget="badge"
                                       decoration-muted="state == 'draft'"
                                       decoration-info="state == 'to_approve'"
                                       decoration-success="state == 'approved'"
                                       decoration-danger="state == 'cancel'"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ⚙️ Acción -->
    <record id="action_planillas_planillas" model="ir.actions.act_window">
        <field name="name">Planillas</field>
        <field name="res_model">cronograma.planilla</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

</odoo>
