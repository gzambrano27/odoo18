<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista list -->
    <record id="view_solicitud_aprobacion_atenciones_list" model="ir.ui.view">
        <field name="name">solicitud.aprobacion.atenciones.list</field>
        <field name="model">solicitud.aprobacion.atenciones</field>
        <field name="arch" type="xml">
            <list string="Solicitudes Comerciales" default_order="create_date desc">
                <field name="name"/>
                <field name="solicitante_id" widget="many2one_avatar_user"/>
                <field name="fecha_solicitud"/>
                <field name="fecha_salida"/>
                <field name="fecha_retorno"/>
                <field name="dias_viaje"/>
                <field name="total_movilizacion" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="total_alimentacion" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="total_solicitud" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="create_uid" widget="many2one_avatar_user" optional="show"/>
                <field name="create_date" optional="show"/>
                <field name="state" widget="badge" string="Estado"
                       decoration-muted="state == 'registrado'"
                       decoration-info="state == 'a_aprobar'"
                       decoration-success="state == 'aprobado'"/>
            </list>
        </field>
    </record>

    <!-- Vista form -->
    <record id="view_solicitud_aprobacion_atenciones_form" model="ir.ui.view">
        <field name="name">solicitud.aprobacion.atenciones.form</field>
        <field name="model">solicitud.aprobacion.atenciones</field>
        <field name="arch" type="xml">
            <form string="Solicitud de Aprobación de Atenciones Comerciales">
                <header>
                    <button name="%(report_solicitud_aprobacion_atenciones)d"
                            type="action"
                            string="Imprimir solicitud"
                            class="oe_highlight"
                            invisible="state == 'registrado'"/>

                    <button name="action_send_for_approval"
                            type="object"
                            string="Enviar para aprobación"
                            invisible="not (state in ['registrado','revision'])"
                            class="btn-primary"
                            groups="atenciones_comerciales.group_gerente"/>

                    <button name="action_reset_to_registrado"
                            type="object"
                            string="Reiniciar a Registrado"
                            invisible="not (state in ['a_aprobar','aprobado'])"
                            class="btn-secondary"
                            groups="atenciones_comerciales.group_gerente,atenciones_comerciales.group_presidente"/>

                    <button name="action_approve"
                            type="object"
                            string="Aprobar"
                            invisible="state != 'a_aprobar'"
                            class="btn-secondary"
                            groups="atenciones_comerciales.group_presidente"/>

                    <field name="state" widget="statusbar"/>
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="solicitante_id" options="{'no_create': True}" readonly="state != 'registrado'"/>
                            <field name="employee_id" invisible="1"/>
                            <field name="cargo" readonly="1"/>
                            <field name="area" readonly="1"/>
                            <field name="check_confirmacion"
                                   readonly="state != 'revision'"
                                   invisible="state != 'revision'"
                                   groups="atenciones_comerciales.group_aprobador,atenciones_comerciales.group_presidente"/>
                        </group>
                        <group>
                            <field name="fecha_solicitud" readonly="1"/>
                            <field name="fecha_salida" readonly="state != 'registrado'"/>
                            <field name="fecha_retorno" readonly="state != 'registrado'"/>
                            <field name="dias_viaje" readonly="1"/>
                        </group>
                    </group>

                    <group>
                        <field name="cliente_id" options="{'no_create': True}" readonly="state != 'registrado'"/>
                        <field name="ciudad" readonly="state != 'registrado'"/>
                    </group>

                    <notebook>
                        <page string="Delegados">
                            <field name="delegado_ids" readonly="state != 'registrado'">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="puesto"/>
                                </list>
                                <form>
                                    <group>
                                        <field name="name"/>
                                        <field name="puesto"/>
                                    </group>
                                </form>
                            </field>
                        </page>

                        <page string="Movilización">
                            <field name="movilizacion_ids" readonly="state != 'registrado'">
                                <list editable="bottom">
                                    <field name="concepto"/>
                                    <field name="monto" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="observaciones"/>
                                </list>
                            </field>
                        </page>

                        <page string="Alimentación">
                            <field name="alimentacion_ids" readonly="state != 'registrado'">
                                <list editable="bottom">
                                    <field name="concepto"/>
                                    <field name="monto" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="observaciones"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                    <group>
                        <separator string="Totales"/>
                    </group>
                    <group class="oe_subtotal_footer o_form_label_align_top">
                        <field name="total_movilizacion" readonly="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="total_alimentacion" readonly="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="total_solicitud" readonly="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    </group>
                </sheet>

                <!-- Chatter -->
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Search view -->
    <record id="view_reg_solicitud_comercial_filter" model="ir.ui.view">
        <field name="name">solicitud.aprobacion.atenciones.search</field>
        <field name="model">solicitud.aprobacion.atenciones</field>
        <field name="arch" type="xml">
            <search string="Búsqueda Aprobaciones de Atenciones">
                <field name="name"/>
                <filter string="Mis solicitudes" name="mis_solicitudes" domain="[('solicitante_id','=',uid)]"/>
                <group expand="1" string="Agrupar por...">
                    <filter name="group_by_solicitante" string="Solicitante" context="{'group_by':'solicitante_id'}"/>
                    <filter name="group_by_state" string="Estado" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_solicitud_aprobacion_atenciones" model="ir.actions.act_window">
        <field name="name">Solicitudes de Atenciones Comerciales</field>
        <field name="res_model">solicitud.aprobacion.atenciones</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_reg_solicitud_comercial_filter"/>
        <field name="context">{'search_default_mis_solicitudes': 1}</field>
    </record>
</odoo>
