<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- 💬 Vista del wizard de mensaje -->
        <record id="message_wizard_view_form" model="ir.ui.view">
            <field name="name">message.wizard.form</field>
            <field name="model">message.wizard</field>
            <field name="arch" type="xml">
                <form string="Mensaje" create="false" edit="false" delete="false">
                    <sheet>
                        <group>
                            <h2 class="text-center fw-bold">
                                <field name="title" nolabel="1" readonly="1" class="w-100"/>
                            </h2>
                            <separator string=""/>
                            <field name="name" nolabel="1" readonly="1" class="w-100"/>
                        </group>
                    </sheet>
                    <footer>
                        <button special="cancel" string="Salir" icon="fa-times" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- ⚙️ Acción del wizard -->
        <record id="message_wizard_action" model="ir.actions.act_window">
            <field name="name">Mensaje</field>
            <field name="res_model">message.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="message_wizard_view_form"/>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

    </data>
</odoo>
