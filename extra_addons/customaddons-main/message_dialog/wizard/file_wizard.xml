<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- 🧩 Vista del wizard -->
        <record id="file_wizard_view_form" model="ir.ui.view">
            <field name="name">file.wizard.form</field>
            <field name="model">file.wizard</field>
            <field name="arch" type="xml">
                <form string="Mensaje" create="false" edit="false" delete="false">
                    <sheet>
                        <group>
                            <h2>
                                <field name="title" nolabel="1" readonly="1" class="text-center fw-bold" />
                            </h2>
                            <separator string=""/>
                            <field name="name" nolabel="1" readonly="1" class="w-100"/>
                            <field name="file_name" invisible="1" readonly="1"/>
                            <field name="file" nolabel="1" filename="file_name" readonly="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button special="cancel" string="Salir" icon="fa-times" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- ⚙️ Acción del wizard -->
        <record id="file_wizard_action" model="ir.actions.act_window">
            <field name="name">Archivo</field>
            <field name="res_model">file.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="file_wizard_view_form"/>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

    </data>
</odoo>
