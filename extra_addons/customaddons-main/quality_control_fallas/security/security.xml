    <record id="module_category_quality_control_fallas" model="ir.module.category">
      <field name="name">Control de Fallas y Garantías</field>
      <field name="sequence">10</field>
    </record>

    <!-- Grupo Supervisor -->
    <record id="group_supervisor_quality_control" model="res.groups">
      <field name="name">Supervisor</field>
