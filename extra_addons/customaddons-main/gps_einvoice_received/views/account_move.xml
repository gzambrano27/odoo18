<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- âœ… Herencia de vista de factura de proveedor -->
    <record id="view_account_move_inht_ref" model="ir.ui.view">
        <field name="name">account.move.inht.ref.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />

        <field name="arch" type="xml">
            <!-- ðŸ“Œ Inserta antes de product_uom_id dentro de invoice_line_ids -->
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='product_uom_id']" position="before">

                <!-- ðŸ”¹ Referencia interna 2 -->
                <field name="ref2" optional="hide"/>

                <!-- ðŸ”¹ Campo interno de control -->
                <field name="locked" invisible="1"/>

                <!-- ðŸ”¹ CÃ³digo importado (solo visible en facturas o notas de crÃ©dito de proveedor) -->
                <field name="imported_code" optional="hide" readonly="1" force_save="1"
                       attrs="{'invisible': [('locked', '!=', True)]}"
                       invisible="context.get('default_move_type') not in ['in_invoice','in_refund']"/>

                <!-- ðŸ”¹ DescripciÃ³n importada (solo visible en facturas o notas de crÃ©dito de proveedor) -->
                <field name="imported_description" optional="hide" readonly="1" force_save="1"
                       attrs="{'invisible': [('locked', '!=', True)]}"
                       invisible="context.get('default_move_type') not in ['in_invoice','in_refund']"/>

            </xpath>
        </field>
    </record>
</odoo>
