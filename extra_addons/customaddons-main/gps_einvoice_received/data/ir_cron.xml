<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="1">

    <!-- ⏱️ Cron para actualizar documentos recibidos -->
    <record id="ir_cron_updated_ereceived" model="ir.cron">
        <field name="name">Actualizar Documentos Recibidos</field>
        <field name="model_id" ref="model_electronic_document_received"/>
        <field name="state">code</field>
        <field name="code">model.update_received_documents_states()</field>

        <!-- ⏰ Frecuencia: cada 1 hora -->
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>

        <!-- 📅 Fecha de la primera ejecución -->
        <field name="nextcall">2025-01-18 00:00:00</field>

        <!-- 🟢 En Odoo 18 ya no se usa numbercall ni max_number_of_calls -->
        <field name="active" eval="True"/>
    </record>

</odoo>
